    "/api/product": {
      "get": {
        "tags": [
          "Todos"
        ],
        "description": "取得所有Todos",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "number",
                    "example": 1
                  },
                  "title": {
                    "type": "string",
                    "example": "第一條備忘錄事項"
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Todos"
        ],
        "description": "新增 Todo",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Todo 內容.",
            "required": true,
