    "/users/signup": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "註冊",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "註冊內容",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "test@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "123456"
                },
                "username": {
                  "type": "string",
                  "example": "Nains"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "註冊成功"
                }
              },
              "xml": {
                "name": "main"
              }
            },
            "description": "OK"
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "登入",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "登入內容",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "test@gmail.com"
