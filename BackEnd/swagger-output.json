{
  "swagger": "2.0",
  "info": {
    "title": "Nains API",
    "description": "學習 Node.js 的心路歷程",
    "version": "1.0.0"
  },
  "host": "backexample.zebur.app",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/api/product": {
      "get": {
        "tags": [
          "Todos"
        ],
        "description": "取得所有Todos",
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/Todos/resPonse"
            },
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Todos"
        ],
        "description": "新增 Todo",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Todo 內容.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "這是標題"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/Todos/resPonse"
            },
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/product/{id}": {
      "put": {
        "tags": [
          "Todos"
        ],
        "description": "更新 Todo",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Todo 修改內容",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "這是標題"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/Todos/resPonse"
            },
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Todos"
        ],
        "description": "刪除特定 Todo",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/Todos/resPonse"
            },
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/signup": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "註冊",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "註冊內容",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "test@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "123456"
                },
                "username": {
                  "type": "string",
                  "example": "Nains"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/Users/Signup"
            },
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "登入",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "登入內容",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "test@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "123456"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/Users/Login"
            },
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/users/profile": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "驗證，加密後的token須放在headers的Authorization",
        "parameters": [
          {
            "name": "headers",
            "in": "Authorization",
            "type": "string",
            "description": "加密後的Token"
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/Users/Profile"
            },
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "Todos": {
    "resPonse": [
      {
        "id": 1,
        "title": "第一條備忘錄事項"
      }
    ]
  },
  "Users": {
    "Signup": {
      "message": "註冊成功"
    },
    "Login": {
      "message": "登入成功",
      "status": "加密後的token"
    },
    "Profile": {
      "message": "成功",
      "status": {
        "email": "test@gmail.com",
        "username": "Nains",
        "password": "123456"
      }
    }
  }
}